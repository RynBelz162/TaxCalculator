<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TaxCalculator.ViewModels"
             x:Class="TaxCalculator.MainPage"
             x:DataType="viewmodels:MainVm">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Entry Text="{Binding Zip}" MaxLength="5" />
        <Button Text="Get Rates" Command="{Binding GetTaxRateCommand}" />
    </StackLayout>

</ContentPage>

 